# Database
DATABASE_URL=postgresql+asyncpg://postgres:postgres@localhost:5432/xauusd_trader
SYNC_DATABASE_URL=postgresql://postgres:postgres@localhost:5432/xauusd_trader

# Redis
REDIS_URL=redis://localhost:6379/0

# Security
JWT_SECRET_KEY=your-super-secret-key-change-in-production
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# OANDA API (for XAU/USD data)
OANDA_API_KEY=your-oanda-api-key
OANDA_ACCOUNT_ID=your-oanda-account-id
OANDA_ENVIRONMENT=practice  # practice or live

# Trading Configuration
DEFAULT_SYMBOL=XAU_USD
TRADING_STYLE=volatility  # volatility or investment
MAX_RISK_PER_TRADE=0.02  # 2% per trade
MAX_DAILY_LOSS=0.05  # 5% max daily loss
MAX_DRAWDOWN=0.15  # 15% max drawdown

# ML Model Configuration
MODEL_RETRAIN_THRESHOLD=0.75  # Retrain if accuracy drops below
PREDICTION_CONFIDENCE_MIN=70.0  # Minimum confidence for signals
ENSEMBLE_WEIGHTS={"lstm": 0.4, "xgboost": 0.35, "lightgbm": 0.25}

# Feature Configuration
LOOKBACK_PERIODS={"short": 14, "medium": 50, "long": 200}
TIMEFRAMES=["M5", "M15", "H1", "H4", "D"]

# News and Sentiment
NEWS_API_KEY=your-news-api-key
ENABLE_SENTIMENT_ANALYSIS=true

# Celery
CELERY_BROKER_URL=redis://localhost:6379/1
CELERY_RESULT_BACKEND=redis://localhost:6379/2

# Monitoring
SENTRY_DSN=your-sentry-dsn
PROMETHEUS_ENABLED=true

# Logging
LOG_LEVEL=INFO
LOG_FORMAT=json  # json or text

# CORS
CORS_ORIGINS=["http://localhost:3000", "http://localhost:8080"]

# Rate Limiting
RATE_LIMIT_PER_MINUTE=60
